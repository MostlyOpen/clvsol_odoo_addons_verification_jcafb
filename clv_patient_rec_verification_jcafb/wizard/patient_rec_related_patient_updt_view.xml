<odoo>

    <record id="clv_patient_rec_related_patient_updt_view_form" model="ir.ui.view">
        <field name="name">clv.patient_rec.related_patient_updt.form</field>
        <field name="model">clv.patient_rec.related_patient_updt</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_right">
                </div>
                <label for="patient_rec_ids"/>
                <field name="patient_rec_ids"/>
                <group>
                    <group>
                        <field name="update_contact_info_data"/>
                        <field name="related_patient_verification_exec"/>
                        <field name="patient_rec_verification_exec"/>
                    </group>
                </group>
                <footer>
                    <button 
                        type="object"
                        name="do_patient_rec_related_patient_updt"
                        string="Related Patient Update"
                        class="oe_highlight"
                        />
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>

        </field>
    </record>

    <!-- More button Action -->
    <record id="clv_patient_rec_related_patient_updt_action" model="ir.actions.act_window">
        <field name="name">Patient (Rec) Related Patient Update</field>
        <field name="binding_model_id" ref="model_clv_patient_rec"/>
        <field name="res_model">clv.patient_rec.related_patient_updt</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
